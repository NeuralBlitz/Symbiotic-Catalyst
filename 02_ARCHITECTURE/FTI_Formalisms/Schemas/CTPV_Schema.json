    {
      "field_name": "Ethical_Strain_Metric",
      "data_type": "float",
      "constraint": "CECT_Bound_Check",
      "description": "The local Ethical Heat (Delta H Omega) at the time of commit."
    },
    {
      "field_name": "TII_Homology_Delta",
      "data_type": "float",
      "constraint": "Structural_Homology_Lock",
      "description": "The measured change in the TII structural invariant (guarantees identity continuity)."
    }
  ]
